@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-light  bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-dark py-2">Edit Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body py-4">
        <form method="post" enctype="multipart/form-data" class="row">
            <div class="border p-3">
                <div class="mb-3 form-floating py-2 col-12">
                    <input asp-for="Name" type="text" class="form-control border-0 shadow" />
                    <label asp-for="Name" class="ms-2"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3 form-floating py-2 col-12">
                    <input asp-for="DisplayOrder" type="text" class="form-control border-0 shadow" />
                    <label asp-for="DisplayOrder" class="ms-2"></label>
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>

                <div class="mb-3 form-floating py-2 col-12">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <div class="mb-2">
                            <img src="@Model.ImageUrl" alt="Category Image" class="img-fluid img-thumbnail" style="max-width: 100px; height: auto;" />
                        </div>
                    }
                    <input type="file" name="file" class="form-control border-0 shadow" />
                    
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button class="btn btn-primary form-control">Update</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary form-control">Back To List</a>
                    </div>
                </div>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_validationScriptsPartial" />
}
